extends ../layouts/main-layout.pug
block content 
    h1(style='text-align: center') #{pageTitle}
    main 
        if (orders.length <= 0)
            h1 Nothing There! 
        else 
            ul.orders
                each order in orders 
                    li.orders__item
                        h1 Order #{order._id}
                        ul.orders__products
                            each product in order.items  
                                li.orders__products-item #{product.title}
                
